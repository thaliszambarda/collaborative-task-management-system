{
  "extends": "../../packages/tsconfig/tsconfig.base.json",
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "declaration": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "test/**/*.spec.ts",
    "test/**/*.e2e-spec.ts"
  ]
}